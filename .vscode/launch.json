    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend (FastAPI)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "browse-lite",
            "name": "Open in Browser",
            "request": "launch",
            "url": "http://localhost:5173"
        }
    ]
}